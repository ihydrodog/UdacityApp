<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".MainActivityFragment"
    android:background="#ffdfeaf1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotify"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#F08C35" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scores"
        android:background="#F08C35"
        android:layout_below="@+id/spotify"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/spotify"
        android:layout_alignStart="@+id/spotify"
        android:layout_alignRight="@+id/spotify"
        android:layout_alignEnd="@+id/spotify" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/library"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/scores"
        android:layout_alignLeft="@+id/scores"
        android:layout_alignStart="@+id/scores"
        android:layout_alignRight="@+id/scores"
        android:layout_alignEnd="@+id/scores" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/build"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/library"
        android:layout_alignLeft="@+id/library"
        android:layout_alignStart="@+id/library"
        android:layout_alignRight="@+id/library"
        android:layout_alignEnd="@+id/library" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyz"
        android:background="#ff8a41"
        android:layout_below="@+id/build"
        android:layout_alignLeft="@+id/build"
        android:layout_alignStart="@+id/build"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/build"
        android:layout_alignEnd="@+id/build" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstone"
        android:background="#ff2911"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/xyz"
        android:layout_alignRight="@+id/xyz"
        android:layout_alignEnd="@+id/xyz"
        android:layout_alignLeft="@+id/xyz"
        android:layout_alignStart="@+id/xyz"
        android:textColor="@android:color/white" />

</RelativeLayout>
